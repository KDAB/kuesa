[Setup]
; NOTE: The value of AppId uniquely identifies this application.
; Do not use the same AppId value in installers for other applications.
; (To generate a new GUID, click Tools | Generate GUID inside the IDE.)
AppId={{8A65FC8C-4309-421D-8F96-CECF6A6D8B50}
AppName=Kuesa Asset Pipeline Editor
AppVersion=$$VERSION
AppPublisher=KDAB
AppPublisherURL=http://www.kdab.com/kuesa/
AppSupportURL=http://www.kdab.com/kuesa/
AppUpdatesURL=http://www.kdab.com/kuesa/
ArchitecturesAllowed=x64
ArchitecturesInstallIn64BitMode=x64
DefaultDirName={pf}\KDAB\Kuesa
DefaultGroupName=KDAB\Kuesa
LicenseFile=$$APE_SOURCE\..\..\Licensing.txt
OutputBaseFilename=InstallKuesaAssetPipelineEditor
Compression=lzma
SolidCompression=yes
VersionInfoVersion=$$VERSION
VersionInfoCompany=KDAB
