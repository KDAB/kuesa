{
    "module": "kuesa",
    "testDir": "../../config.tests",

    "commandline": {
        "options": {
            "draco": { "type": "enum", "values": [ "system", "no", "qt" ] }
        }
    },

    "libraries": {
        "draco": {
            "label": "Draco Compression",
            "test": "draco",
            "sources": [
                { "type": "draco", "libs": "-ldraco" }
            ]
        }
    },

    "features": {
        "draco": {
            "label": "Draco",
            "output": [
                "publicFeature",
                "feature",
                { "type": "define", "name": "KUESA_DRACO_COMPRESSION" }
            ]
        },
        "system-draco": {
            "label": "System Draco",
            "enable": "input.draco == 'system'",
            "disable": "input.draco == 'qt'",
            "condition": "features.draco && libs.draco",
            "output": [
                "publicFeature",
                { "type": "define", "name": "KUESA_DRACO_COMPRESSION" }
            ]
        }
    },

    "report": [
    ],

    "summary": [
        {
            "section": "Kuesa",
            "entries": [
                "draco",
                "system-draco"
            ]
        }
    ]
}
